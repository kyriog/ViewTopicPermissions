<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<!-- This is an updated version of the plugin from hadesflames. All credits must go to him. -->
	<id>kyriog:ViewTopicPermissions</id>
	<name>View Topic Permissions</name>
	<version>1.0</version>
	<type>modification</type>
	
	<install for="2.0 RC2 - 2.0 RC3">
		<modification format="xml" type="file">modifications.xml</modification>
		<modification format="xml" type="file">languages.xml</modification>
	</install>
	
	<uninstall for="2.0 RC2 - 2.0 RC3">
		<modification format="xml" type="file" reverse="true">modifications.xml</modification>
		<modification format="xml" type="file" reverse="true">languages.xml</modification>
	</uninstall>
</package-info>